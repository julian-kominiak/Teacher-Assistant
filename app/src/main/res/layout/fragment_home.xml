<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/teacherAvatar"
        android:layout_width="202dp"
        android:layout_height="186dp"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toTopOf="@+id/teacherName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck"
        tools:src="@drawable/avatar"
        android:src="@drawable/avatar"
        android:contentDescription="@string/teacher_photo" />

    <TextView
        android:id="@+id/teacherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/joanna_muras"
        app:layout_constraintBottom_toTopOf="@+id/button_home_to_subjects"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacherAvatar" />

    <Button
        android:id="@+id/button_home_to_subjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/przedmioty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacherName" />

</androidx.constraintlayout.widget.ConstraintLayout>